<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

		<entry key="hotelinsertForm">
		
			SELECT 
					TAG_NO
				  , TAG_NAME
			  FROM tb_tag
			 WHERE STATUS = 'Y'
		
		</entry>

		<entry key="insertHotel">
			INSERT
				INTO TB_HOTEL
				VALUES
				(
					SEQ_HOTELNO.NEXTVAL
				  , ?
				  , ?
				  , ?
				  , ?
				  , ?
				  , ?
				  , ?
				  , ?
				  , ?
				  , ?
				  , 'Y'
				  , ?
				  , ?
				  , ?
				)
				
		</entry>
		
		<entry key="insertHoAttachment">
			INSERT
				INTO TB_FILE
				VALUES
				(
					SEQ_FILENO.NEXTVAL
				  , ?
				  , 'Y'
				  , SEQ_HOTELNO.CURRVAL
				  , 'H'
				  , ?
				)


		</entry>
		
		<entry key="selectListCount">
		
			SELECT COUNT(*) COUNT 
  			FROM TB_RES_INFO
 			
		</entry>
		
		<entry key="selectRevListCount">
		
			SELECT COUNT(*) COUNT 
  			FROM TB_REVIEW
 			
		</entry>
		
		<entry key="selectList">
			SELECT *
				FROM (
		            SELECT ROWNUM RNUM, A.*
		              FROM(
		                        SELECT
		                                RES_NO
		                              , HOTEL_NO 
		                              , USER_NO
		                              , RO_NO 
		                              , DATE_IN
		                              , DATE_OUT
		                              , RES_DATE
		                              , SUBSTR(RES_STATUS,3,2) RES_STATUS
		                              , REQ
		                              , REASON_CANCEL
		                              , PAY_METHOD
		                              , PAY
		                              , PAY_DATE
		                              , RES_PEOPLE
		                              , RES_NAME
		                              , RES_PHONE
		                              , RES_EMAIL
		                          FROM TB_RES_INFO B
		                         WHERE HOTEL_NO = ( SELECT H.HOTEL_NO
                                                    FROM TB_HOTEL H, TB_MEM M
                                                    WHERE H.HOTEL_NAME = M.HOTEL_NAME
                                                    AND H.HOTEL_NAME = ?
                                                        )
		                         ORDER
		                            BY DATE_IN DESC 
		                ) A
				 )
		 		WHERE RNUM BETWEEN ? AND ?
		</entry>
		
		
		<entry key="selectRevList">
			 SELECT *
				FROM (
		            SELECT ROWNUM RNUM, A.*
		              FROM(
		                        SELECT
		                                REV_NO
		                              , USER_ID
		                              , RES_NO
		                              , R.REGIST_DATE REGIST_DATE
		                              , REV_RATING
		                              , REV_TITLE
		                          FROM  TB_REVIEW R
                                  JOIN TB_USER USING(USER_NO)
		                         WHERE HOTEL_NO = ( SELECT H.HOTEL_NO
                                                    FROM TB_HOTEL H, TB_MEM M
                                                    WHERE H.HOTEL_NAME = M.HOTEL_NAME
                                                    AND H.HOTEL_NAME = ?
                                                        )
		                         ORDER
		                            BY REV_NO DESC 
		                ) A
				 )
		 		WHERE RNUM BETWEEN ? AND ?
		</entry>

</properties>